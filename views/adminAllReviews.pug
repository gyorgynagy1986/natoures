extends account 
block content-dinamic 
   
    .right-dash-dinamic-content
      .remove-section
        form.for-select-this-shit
          .input-and-button
            .form-remove-tour
              label.admin-label-tour-remove(for='rtid')
              input#rtid.admin-control-tour-remove(type='text', placeholder='Copy the id to remove the REVIEW')
            .form-remove-tour-btn
              button.remove-tour-btn remove        
        .line-remove-section
          img(src='/assets/line-remove-section.svg', alt='line-remove')
      .justforsomespace
      .add-new-tour-button
      .justforsomespace
      .section-content-admin-owerflow
        each reviewData in review
          .tour-admin-card.review-admin-card
            .box-admin-tour-card-photo.review-card-prefix
              img(src=`/img/users/default.png`, alt=`${reviewData.name}`)
            .box-admin-tour-card-text
              .box-admin-tour-card-text-box
                p.admin-tour-card-title= reviewData.user.name
                p.admin-tour-description= `Rating : ${reviewData.rating}`
                p.admin-tour-description= reviewData.review
              .box-admin-tour-card-text-team-photoBox
                .box-admin-tour-card-text-team-photoBox-photo
            .box-admin-tour-card-button
              p.box-admin-tour-card-button-id= `ID: ${reviewData.id}`
                .box-tour-card-buttons
                  p.edit-button-tour 
                    a(href=`/all-reviews`) EDIT
                  p.edit-button-tour 
                   a(href=`/all-reviews`) VIEW


    